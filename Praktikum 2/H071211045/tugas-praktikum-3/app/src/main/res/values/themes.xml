<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TugasPraktikum3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/cream</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/semi_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Button.Calculator" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/button_container</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:padding">18dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6">

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#595F85"
            android:onClick="clear"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#595F85"
            android:onClick="delete"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/bagi"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#293CA8"
            android:onClick="bagi"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/tujuh"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#2196F3"
            android:onClick="tujuh"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25dp" />
        <Button
            android:id="@+id/delapan"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="delapan"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/sembilan"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="sembilan"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/kali"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="x"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_row="1"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="kali"
            android:backgroundTint="#293CA8"
            />
        <Button
            android:id="@+id/empat"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="empat"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/lima"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="2"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="lima"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/enam"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="2"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:layout_marginLeft="10dp"
            android:onClick="enam"
            />
        <Button
            android:id="@+id/kurang"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_row="2"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="kurang"
            android:backgroundTint="#293CA8"
            />
        <Button
            android:id="@+id/satu"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="3"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="satu"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/dua"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="3"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="dua"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/tiga"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="3"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="tiga"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/tambah"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_row="3"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="tambah"
            android:backgroundTint="#293CA8"
            />
        <Button
            android:id="@+id/nol"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:onClick="nol"
            android:backgroundTint="#2196F3"
            />
        <Button
            android:id="@+id/sama_dengan"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="="
            android:textSize="25dp"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="sama_dengan"
            android:backgroundTint="#293CA8"
            />

    </GridLayout>

</LinearLayout>
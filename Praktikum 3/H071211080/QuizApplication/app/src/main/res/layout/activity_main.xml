<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/question3_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="200dp"
              app:cardCornerRadius="16dp"
              app:cardElevation="8dp"
              android:backgroundTint="#eff1ef">

              <TextView
                  android:textColor="#434343"
                  android:id="@+id/textview"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="30dp"
                  android:textSize="30dp"
                  android:layout_marginTop="40dp"
                  android:fontFamily="@font/mini_pixel"/>
          </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1c9a62"
                android:fontFamily="@font/mini_pixel"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/optiona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#65aeb5"
                android:fontFamily="@font/mini_pixel"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/optionb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#898989"
                android:fontFamily="@font/mini_pixel"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/optionc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#f16122"
                android:fontFamily="@font/mini_pixel"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/optiond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#046493"
                android:fontFamily="@font/mini_pixel"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nextbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#f8930f"
                android:fontFamily="@font/mini_pixel"
                android:text="next"
                android:textSize="24sp"
                android:textColor="#ffffff"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>